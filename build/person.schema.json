{
  "$id": "https://example.com/schemas/person.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "keyId": 12,
  "type": "object",
  "properties": {
    "id": { "type": "integer" },
    "name": { "type": "string" },
    "address": { "$ref": "address.json" },
    "phones": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "number": { "type": "string" },
          "type":   { "type": "string" }
        },
        "required": ["number"]
      }
    }
  },
  "required": ["id","name"]
}